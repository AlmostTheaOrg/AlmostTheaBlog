@model TheaBlog.Models.Photo

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Photo</h4>
    <hr />
    <dl class="dl-horizontal">
        @if (Model.Image!= null)
        {
            <dt>
                Photo
            </dt>
            <dd>
                <img src="~/Files?id=@Model.Image.FileId" alt="image" />
            </dd>
        }
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.PhotoId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
